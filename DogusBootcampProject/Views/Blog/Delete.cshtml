@model DogusBootcampProject.Models.Blog
@{
    ViewData["Title"] = "Blog Sil";
}

<h2>Blog Sil</h2>

<div class="alert alert-warning">
    <strong>Dikkat!</strong> Bu blog yazısını silmek üzeresiniz.
</div>

<dl class="row">
    <dt class="col-sm-2">Başlık:</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Yazar:</dt>
    <dd class="col-sm-10">@Model.User?.UserName</dd>

    <dt class="col-sm-2">Kategori:</dt>
    <dd class="col-sm-10">@Model.Category?.Name</dd>

    <dt class="col-sm-2">Yayın Tarihi:</dt>
    <dd class="col-sm-10">@Model.PublishDate.ToShortDateString()</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Evet, Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
