@model List<DogusBootcampProject.Models.Blog>
@{
    ViewData["Title"] = "Anasayfa";
    var categories = ViewBag.Categories as List<DogusBootcampProject.Models.Category>;
    var selectedCategoryId = Context.Request.Query["categoryId"].ToString();
}

<h2 class="mb-4">Blog Yazıları</h2>

<!-- Kategori Filtreleme -->
<div class="mb-4">
    <form method="get" asp-action="Index" class="row g-2">
        <div class="col-md-4">
            <select name="categoryId" class="form-select" onchange="this.form.submit()">
                <option value="">Tüm Kategoriler</option>
                @foreach (var category in categories)
                {
                    <option value="@category.Id" selected="@(selectedCategoryId == category.Id.ToString() ? "selected" : null)">
                        @category.Name
                    </option>
                }
            </select>
        </div>
    </form>
</div>

<!-- Blog Kartları -->
<div class="row">
    @foreach (var blog in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                @if (!string.IsNullOrEmpty(blog.ImageUrl))
                {
                    <img src="@blog.ImageUrl" class="card-img-top" style="height:200px; object-fit:cover;" alt="Görsel" />
                }
                <div class="card-body">
                    <h5 class="card-title">@blog.Title</h5>
                    <p class="card-text text-muted">
                        Kategori: @blog.Category?.Name<br />
                        Yazar: @blog.User?.UserName<br />
                        Tarih: @blog.PublishDate.ToShortDateString()
                    </p>
                    <a asp-controller="Blog" asp-action="Details" asp-route-id="@blog.Id" class="btn btn-outline-primary">Devamını Oku</a>
                </div>
            </div>
        </div>
    }
    }
</div>
